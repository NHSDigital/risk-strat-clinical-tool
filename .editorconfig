# To learn more about .editorconfig see https://aka.ms/editorconfigdocs

# All files
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
tab_width = 4

trim_trailing_whitespace = true
insert_final_newline = true

[*.{js,json,.yml}]
indent_size = 2
tab_width = 2

[*.approved.json]
charset = utf-8-bom
indent_size = 4